{
  "env": {
  	"es6": true,
    "node": true,
    "mocha": true
  },
  "globals": {},
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "array-bracket-spacing": [
      2,
      "never",
      {
        "singleValue": false
      }
    ],
	"arrow-parens": 2,
    "arrow-spacing": 2,
    "brace-style": [
      2,
      "1tbs"
    ],
    "complexity": [
      2,
      8
    ],
    "comma-dangle": [
      2,
      "never"
    ],
    "comma-style": [
      2,
      "last"
    ],
    "curly": [
      2,
      "all"
    ],
    "dot-notation": 0,
    "eol-last": 2,
    "eqeqeq": 2,
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "key-spacing": 0,
    "keyword-spacing": 2,
    "linebreak-style": [
      2,
      "unix"
    ],
    "lines-around-comment": 0,
    "max-depth": [
      2,
      4
    ],
    "max-len": [
      2,
      120,
      2
    ],
    "max-nested-callbacks": [
      2,
      4
    ],
    "max-statements": [
      2,
      20,
      {
        "ignoreTopLevelFunctions": true
      }
    ],
    "new-cap": 0,
    "no-cond-assign": 2,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-eq-null": 0,
    "no-extra-semi": 2,
    "no-eval": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multi-str": 2,
    "no-multiple-empty-lines": [
      2,
      {
        "max": 2,
        "maxBOF": 0,
        "maxEOF": 1
      }
    ],
    "no-plusplus": 0,
    "no-spaced-func": 2,
    "no-trailing-spaces": 2,
    "no-unreachable": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-var": 2,
    "no-with": 2,
    "one-var": [
      2,
      {
        "uninitialized": "never",
        "initialized": "never"
      }
    ],
    "prefer-const": 2,
    "quote-props": [
      2,
      "as-needed",
      {
        "keywords": true
      }
    ],
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "semi": [
      2,
      "always"
    ],
    "sort-imports": [
      2,
      {
        "ignoreCase": true
      }
    ],
    "space-before-blocks": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      2,
      "never"
    ],
    "space-in-parens": [
      2,
      "never"
    ],
    "space-infix-ops": 2,
    "space-unary-ops": 0,
    "space-return-throw-case": 0,
    "spaced-comment": [
      2,
      "always"
    ],
    "strict": [
      2,
      "safe"
    ],
    "valid-jsdoc": [
      2,
      {
        "requireParamDescription": false,
        "requireReturn": false,
        "requireReturnDescription": false
      }
    ],
    "wrap-iife": [
      2,
      "outside"
    ],
    "yoda": [
      2,
      "never"
    ]
  }
}
